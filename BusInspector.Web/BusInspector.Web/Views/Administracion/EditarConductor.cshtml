@model BusInspector.Dal.Conductor

@{
                /**/

                ViewBag.Title = "EditarConductor";
                Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Editar Conductor</h2>
<h5>@ViewBag.Mensaje</h5>

</br>
@using (Html.BeginForm("EditarConductor", "Administracion", FormMethod.Post, new { @class = "form-signin" }))
{
    <div class="input-field">
        @Html.Label("Nombre y Apellido")
        @Html.EditorFor(m => m.Nombre, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="input-field">
        @Html.Label("Dni")
        @Html.EditorFor(m => m.Dni, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.Dni)
    </div>

    <div class="input-field">
        @Html.Label("Legajo")
        @Html.EditorFor(m => m.Legajo, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.Legajo)
    </div>

    <div class="input-field center-block">
        <input type="submit" class="btn btn-outline-white btn-lg" value="Editar">
        <a href="@Url.Action("GestionConductor","Administracion")" class="btn btn-outline-white btn-lg">Cancelar</a>
    </div>
}
