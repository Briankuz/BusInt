@model BusInspector.Dal.Inspector

@{
    ViewBag.Title = "EditarInspector";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditarInspector</h2>
<h5>@ViewBag.Mensaje</h5>

</br>
@using (Html.BeginForm("EditarInspector", "Administracion", FormMethod.Post, new { @class = "form-signin" }))
{
    <div class="input-field">
        @Html.Label("Nombre y Apellido")
        @Html.EditorFor(m => m.nombre, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
    </div>
    <div class="input-field">
        @Html.Label("Dni")
        @Html.EditorFor(m => m.dni, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.dni)
    </div>
    <div class="input-field">
        @Html.Label("Legajo")
        @Html.EditorFor(m => m.legajo, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.legajo)
    </div>

    <div class="input-field center-block">
        <input type="submit" class="btn btn-outline-white btn-lg" value="Editar">
        <a href="@Url.Action("GestionInspector","Administracion")" class="btn btn-outline-white btn-lg">Cancelar</a>
    </div>
}
