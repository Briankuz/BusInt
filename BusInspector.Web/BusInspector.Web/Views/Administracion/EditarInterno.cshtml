@model BusInspector.Dal.Interno

@{
    ViewBag.Title = "EditarInterno";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Editar Interno</h2>
<h5>@ViewBag.Mensaje</h5>

</br>
@using (Html.BeginForm("EditarInterno", "Administracion", FormMethod.Post, new { @class = "form-signin" }))
{
    <div class="input-field">
        @Html.Label("Modelo")
        @Html.TextBoxFor(m => m.Modelo, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
    </div>

    <div class="input-field">
        @Html.Label("Marca")
        @Html.TextBoxFor(m => m.Marca, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.Marca)
    </div>
    <div class="input-field">
        @Html.Label("Patente")
        @Html.TextBoxFor(m => m.Patente, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.Patente)
    </div>
    <div class="input-field">
        @Html.Label("Año")
        @Html.TextBoxFor(m => m.Año, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.Año)
    </div>
    <div class="input-field">
        @Html.Label("Pasajeros")
        @Html.TextBoxFor(m => m.CantidadPasajeros, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.CantidadPasajeros)
    </div>

    <div class="input-field">
        <label style="position: relative !important;">Activo</label>
        @Html.DropDownListFor(model => model.Activo, new SelectList(new string[] { "SI", "NO"}, Model.Activo))        
        @Html.ValidationMessageFor(m => m.Activo, "", new { @class = "text-danger" })
    </div>

    <div class="input-field center-block">
        <input type="submit" class="btn btn-outline-white btn-lg" value="Editar">
        <a href="@Url.Action("GestionInterno","Administracion")" class="btn btn-outline-white btn-lg">Cancelar</a>
    </div>
}
