@model BusInspector.Web.Models.UsuarioViewModel
@{
    /**/

    ViewBag.Title = "Editar Usuario";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditarParada</h2>


@using (Html.BeginForm("EditarUsuario", "Administracion", FormMethod.Post, new { @class = "form-signin" }))
{
  
    @Html.HiddenFor(m => m.usuario.IdUsuario)
    <div class="input-field">
        @Html.Label("NombreUsuario")
        @Html.TextBoxFor(m => m.usuario.NombreUsuario, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.usuario.NombreUsuario, "", new { @class = "text-danger" })
    </div>
    <div class="input-field">
        @Html.Label("Password")
        @Html.TextBoxFor(m => m.usuario.Password, new { @class = "validate" })
        @Html.ValidationMessageFor(model => model.usuario.Password)
    </div>

    <div class="input-field">
        @Html.Label("Actor")<br/>
        @Html.DropDownListFor(m => m.conductorinspector.codigo, new SelectList(ViewBag.conductorinspector, "codigo", "descripcion", Model.conductorinspector.codigo), new { @class = "form-control"})
       
    </div>



    <div class="input-field center-block">
        <input type="submit" class="btn btn-outline-white btn-lg" value="Editar">
        <a href="@Url.Action("GestionUsuario","Administracion")" class="btn btn-outline-white btn-lg">Cancelar</a>
    </div>
}

