
@model List<BusInspector.Dal.vw_Inspeccion>

@{
    ViewBag.Title = "ReportesInspeccion";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-body text-center">

            <h3 class="text-center">Reporte de Inspecciones</h3>

            <table id="tbl" class="table">
                <tr>
                    <td><strong>Conductor </strong></td>
                    <td><strong>Inspector </strong></td>
                    <td><strong>Fecha</strong></td>
                    <td><strong>Seccion </strong></td>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td> @String.Format("{0} ({1}) ", @item.Conductor_Nombre, @item.Conductor_id)   </td>

                        <td> @String.Format("{0} ({1}) ", @item.Inspector_Nombre, @item.Inspector_id)</td>
                        <td>@item.Fecha</td>

                        <td>@String.Format("{0} ({1}) ", @item.Seccion_Nombre, @item.Seccion_Id) </td>
                    </tr>

                }

            </table>

            <input id="btnExport" type="submit" class="excel btn btn-success btn-block" value="Exportar a Excel">


        </div>


    </div>
</div>
<script>
$(document).on('click', '.excel', function () {
@{ TempData["FullModel"] = Model; }
window.location.href = '/Administracion/ExportToExcel/';
});
</script>


